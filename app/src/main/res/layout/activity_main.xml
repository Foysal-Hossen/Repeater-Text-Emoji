<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >

        <EditText
            android:id="@+id/fastNameId"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:textSize="25sp"
            android:paddingLeft="15dp"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/lastNameId"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:textSize="25sp"
            android:paddingLeft="15dp"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/emailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textSize="25sp"
        android:paddingLeft="15dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/numberId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number"
        android:textSize="25sp"
        android:paddingLeft="15dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/nidNumberId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nid Number"
        android:textSize="25sp"
        android:paddingLeft="15dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/passportNumberId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Passport Number"
        android:textSize="25sp"
        android:paddingLeft="15dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/studentNumberId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Student Id"
        android:textSize="25sp"
        android:paddingLeft="15dp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/singUpId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sing Up"
        android:textSize="25sp"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/showAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show"
        android:textSize="30sp"
        />


    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        />




</LinearLayout>